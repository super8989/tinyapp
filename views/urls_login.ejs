	<title>Sign in | Tiny App</title>

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="../form.css" />
</head>

<body class='text-center'>
	<%- include('partials/_header'); %>

	<form class="form-signin" action="/login" method="POST">

		<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
		<label for="email" class="sr-only">Email address:</label>
		<input class="form-control m-2" type="email" name="email" placeholder="Enter email" />

		<label for="password" class='sr-only'>Password:</label>
		<input class="form-control m-2" type="password" name="password" placeholder="Password" />

		<% if (emptyForms) { %>
		<p class="text-danger">Enter your email/password</p>
		<%	} %>

		<% if (userNotFound) { %>
		<p class="text-danger">Not Registered</p>
		<%	} %>

		<% if (wrongPassword) { %>
		<p class="text-danger">Incorrect Password</p>
		<%	} %>




		<div class="mb-3">
			<a href="/register">Need to register?</a>
		</div>
		<button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

	</form>



